<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.trubitsyn.lorforandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".App"
        android:supportsRtl="false"
        android:theme="@style/Theme.App">

        <activity
            android:name="dev.trubitsyn.lorforandroid.ui.MainActivity"
            android:label="@string/activity_main"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dev.trubitsyn.lorforandroid.ui.ImageActivity"
            android:label="@string/activity_image"
            android:launchMode="singleTop"
            android:theme="@style/ImageActivityTheme">
        </activity>
    </application>

</manifest>
