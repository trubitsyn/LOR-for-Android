<resources>

    <style name="Theme.App" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomNavigationStyle">
            @style/Widget.MaterialComponents.BottomNavigationView.Colored
        </item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.App</item>
    </style>

    <style name="Theme.App.Dark" parent="Theme.AppCompat.DayNight.DarkActionBar" />

    <style name="Widget.App.RecyclerView" parent="Theme.App">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Theme.App">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="iconTint">@color/colorAccent</item>
    </style>

    <style name="Layout.Item.Simple" parent="Theme.App">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Layout.Item" parent="Theme.App">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextAppearance.App" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorLink">@color/colorLink</item>
        <item name="iconTint">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.App.Headline" parent="TextAppearance.App">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Tags" parent="TextAppearance.App">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.App.Widget.RecyclerView.Item.Headline" parent="TextAppearance.App">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Widget.RecyclerView.Item.Title" parent="TextAppearance.App">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Widget.RecyclerView.Item.Small" parent="TextAppearance.App">
        <item name="android:textSize">14sp</item>
        <item name="iconTint">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.App.Widget.RecyclerView.Item.Tags" parent="TextAppearance.App.Widget.RecyclerView.Item.Small">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
